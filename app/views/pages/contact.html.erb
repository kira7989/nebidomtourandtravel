<div class="page">
  <!-- RD Google Map-->
  <!-- Breadcrumbs -->
  <section class="breadcrumbs-custom-inset">
    <div class="breadcrumbs-custom context-dark bg-overlay-60">
      <div class="container">
        <h2 class="breadcrumbs-custom-title">Contact Us</h2>
        <ul class="breadcrumbs-custom-path">
          <li><a href="index.html">Home</a></li>
          <li class="active">Contact Us</li>
        </ul>
      </div>
      <div class="box-position" style="background-image: url(assets/lalibela4.jpg);"></div>
    </div>
  </section>
  <!-- Contact information-->
  <section class="section section-sm section-first bg-default">
    <div class="container">
      <div class="row row-30 justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-4">
          <article class="box-contacts">
            <div class="box-contacts-body">
              <div class="box-contacts-icon fl-bigmug-line-cellphone55">
                <div class=" material-icons-phone"></div>
                <h5 class="text-dark">Call Us</h5>
              </div>
              <div class="box-contacts-decor"></div>
              <p class="box-contacts-link"><a href="tel:#"><%= @company_information.phone_number.html_safe %></a></p>
              <p class="box-contacts-link"><a href="tel:#"><%= @company_information.alternative_phone_number.html_safe %></a></p>
            </div>
          </article>
        </div>
        <div class="col-sm-8 col-md-6 col-lg-4">
          <article class="box-contacts">
            <div class="box-contacts-body">
              <div class="box-contacts-icon fl-bigmug-line-up104">
                <div class=" material-icons-map"></div>
                <h5 class="text-dark">Visit Us</h5>
              </div>
              <div class="box-contacts-decor"></div>
              <p class="box-contacts-link"><a href="#"><%= @company_information.address.html_safe %></a></p>
              <p class="box-contacts-link"><a href="#"><%= @company_information.alternative_address.html_safe %></a></p>
            </div>
          </article>
        </div>
        <div class="col-sm-8 col-md-6 col-lg-4">
          <article class="box-contacts">
            <div class="box-contacts-body">
              <div class="box-contacts-icon fl-bigmug-line-chat55 ">
                <div class=" material-icons-email"></div>
                <h5 class="text-dark">Mail Us</h5>
              </div>
              <div class="box-contacts-decor"></div>
              <p class="box-contacts-link"><a href="mailto:#"><%= @company_information.email.html_safe %></a></p>
              <p class="box-contacts-link"><a href="mailto:#">info@demolink.org</a></p>
            </div>
          </article>
        </div>
        <div class="col-sm-8 col-md-12 col-lg-12">
          <article class="box-contacts">
            <div class="box-contacts-body-bottom">
              <h5>Contact Us on Our social Medias</h5>
              <div class="box-contacts-decor mb-0"></div>
              <div class="box-contacts-icon fl-bigmug-line-chat55 mt-1">
                <ul class="list-inline list-inline-sm footer-social-list-2">
                  <li><a class=" fa fa-facebook" href="<%= @company_information.facebook_link %>"></a></li>
                  <li><a class=" fa fa-telegram" href="<%= @company_information.telegram_link %>"></a></li>
                  <li><a class=" fa fa-instagram" href="<%= @company_information.instagram_link %>"></a></li>
                  <li><a class=" fa fa-whatsapp" href="<%= @company_information.whatsapp_link %>"></a></li>
                  <li><a class=" fa fa-youtube" href="<%= @company_information.youtube_link %>"></a></li>
                </ul>
              </div>
            </div>
          </article>
        </div>
      </div>
      <div class="mt-4">
        <h3>Our Location</h3>
        <iframe class="mt-3 mb-4 mb-lg-0" src="<%= @company_information.map_embed_link %>" frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
      </div>
    </div>
  </section>
  <!-- Contact Form-->
  <section class="section section-sm section-last bg-default text-left">
    <div class="container">
      <article class="title-classic">
        <div class="title-classic-title">
          <h3>Get in touch</h3>
        </div>
        <div class="title-classic-text">
          <p>If you have any questions, just fill in the contact form, and we will answer you shortly.</p>
        </div>
      </article>
      <div class="col-md-6 pr-md-5 col-lg-12">
        <%= form_for(Contact.new, url: pages_path, method: "post") do |f|%>
          <div class="row">
            <div class="form-group col-md-4">
              <%= f.text_field :full_name, class: "form-control", placeholder: "Full Name *",required: true, class:"form-input" %>
            </div>
            <div class="form-group col-md-4">
              <%= f.text_field :email, class: "form-control", placeholder: "Email *",required: true, class:"form-input" %>
            </div>
            <div class="form-group col-md-4">
              <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number", class:"form-input" %>
            </div>
            <div class="form-group col-md-6">
              <%= f.text_field :subject, class: "form-control", placeholder: "Subject",required: true, class:"form-input" %>
            </div>
            <div class="form-group col-md-6">
              <select name="contact[comment_type]" id="user_sex" class="form-control custom-select custom-select-lg mb-3 form-input">
                <option selected>Type Of Message</option>
                <option value="Testimonial">Testimonial</option>
                <option value="Comment">Comment</option>
                <option value="Question">Question</option>
              </select>
            </div>
            <div class="form-group col-md-12">
              <%= f.text_area :message ,cols: 30, rows: 7, class: "form-control", placeholder: "Message...", class:"form-input" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Send Message ', class: "btn btn-primary py-3 px-5" %>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </section>
</div>
