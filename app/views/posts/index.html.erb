<%provide :title, "Posts"%>

<div class="hero-wrap js-fullheight" style="background-image: url(<%= asset_path("cover-tour-detail.jpg")%>);">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
      <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
        <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Home</a></span> <span>News And Articles</span></p>
        <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">News And Articles</h1>
      </div>
    </div>
  </div>
</div>

<section class="ftco-section ftco-degree-bg">
  <div class="container">
    <div class="col-lg-12">
      <div class="row">
        <% @posts.each do |post|%>
          <div class="col-md-4 d-flex ftco-animate">
            <div class="blog-entry align-self-stretch">
              <%= link_to post_path(post), class: "block-20", style: "background-image: url(#{rails_blob_url(post.medias[0])});" do %>
              <%end%>
              
              <div class="text p-4 d-block">
                <span class="tag"><%= post.post_type%></span>
                <h3 class="heading mt-3"><%= link_to post.post_title, post_path(post)%></h3>
                <div class="meta mb-3">
                  <div><a href="#"><%= post.created_at.strftime("%b %d, %Y")%></a></div>
                  <div><a href="#"><%= post.author_name%></a></div>
                  <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
       
      </div>
      <div class="row mt-5">
        <div class="col text-center">
          <div class="block-27">
            <%= paginate @posts %> 
            <%= page_entries_info @posts %>
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>
</section> 