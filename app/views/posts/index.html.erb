    <div class="container mt-5">
      <h2>Our Blogs</h2>
      <div class="row">
        <%@blogs.each do |blog|%>
          <div class="col-md-6 col-lg-4 mb-4 mb-lg-4">
            <div class="card">
              <a  class="unit-1 text-center">
                <% if blog.medias.attached? %>
                  <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <%= image_tag blog.medias[0], :class => "img-fluid" %>
                      </div>
                      <% blog.medias.drop(1).each do |illustration| %>
                        <div class="carousel-item">
                          <%= image_tag(illustration, :class => "img-fluid") %>
                        </div>
                      <%end%>
                    </div>
                  </div>
                <%end%>
              </a>
              <div class="text p-3">
                <div class="d-flex">
                  <div class="one">
                    <h3 class="card-title"><%= link_to blog.post_title, post_path(blog)%></h3>
                    <div class="group-sm group-middle justify-content-start mt-0">
                      <div class="product-big-rating"><span class="icon material-icons-star"></span><span class="icon material-icons-star"></span><span class="icon material-icons-star"></span><span class="icon material-icons-star"></span><span class="icon material-icons-star_half"></span></div>
                      <a class="product-big-reviews" href="#"><%= Random.rand(50...100) %> customer reviews</a>
                    </div>
                  </div>
                </div>
                <p class="font-weight-bold mt-0"><span><i class="icon-map-o"></i><%= Date.parse(blog.created_at.to_s).strftime('%A')%>, <%= Date.parse(blog.created_at.to_s).to_formatted_s(:long)%></span></p>
                <p><%= blog.body.truncate(256).html_safe%></p>
                <hr>
                <p class="bottom-area d-flex">
                  <span  class="font-weight-bold btn">by: <%= blog.author_name.html_safe%></span>
                  <span class="ml-auto"><%= link_to "Read More", post_path(blog), class: "btn"%></span>
                </p>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
    <div class="container mt-5">
      <h2>Our news</h2>
      <div class="row">
        <%@news.each do |news|%>
          <div class="col-md-6 col-lg-4 mb-4 mb-lg-4 ">
          <div class="card">
            <a  class="unit-1 text-center">
              <% if news.medias.attached? %>
                <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <%= image_tag news.medias[0], :class => "img-fluid" %>
                    </div>
                    <% news.medias.drop(1).each do |illustration| %>
                      <div class="carousel-item">
                        <%= image_tag(illustration, :class => "img-fluid") %>
                      </div>
                    <%end%>
                  </div>
                </div>
              <%end%>
            </a>
            <div class="text p-3">
              <div class="d-flex">
                <div class="one">
                  <h3 class="card-title"><%= link_to news.post_title, post_path(news)%></h3>
                  <div class="group-sm group-middle justify-content-start mt-0">
                    <div class="product-big-rating"><span class="icon material-icons-star"></span></span><span class="icon material-icons-star"></span><span class="icon material-icons-star"></span><span class="icon material-icons-star_half"></span></div>
                  <a class="product-big-reviews" href="#"><%= Random.rand(50...100) %> customer reviews</a>
                </div>
              </div>
            </div>
            <p class="font-weight-bold mt-0"><span><i class="icon-map-o"></i> <%= Date.parse(news.created_at.to_s).strftime('%A')%>, <%= Date.parse(news.created_at.to_s).to_formatted_s(:long)%></span></p>
            <p><%= news.body.truncate(256).html_safe%></p>
            <hr>
            <p class="bottom-area d-flex">
              <span  class="font-weight-bold btn">by: <%= news.author_name.html_safe%></span>
              <span class="ml-auto"><%= link_to "Read More", post_path(news), class: "btn"%></span>
            </p>
          </div>
          </div>
        </div>
